<%= form_with(model: post) do |form| %>

  <% if post.errors.any? %>

    <div style="color: red">

      <h2><%= pluralize(post.errors.count, "error") %> - Erro ao tentar salvar o post:</h2>

      <ul>

        <% post.errors.each do |error| %>

          <li><%= error.full_message %></li>

        <% end %>

      </ul>

    </div>

  <% end %>

  <br>

  <div>

    <%= form.label "Título", style: "display: block" %>

    <%= form.text_field :title %>

  </div>

  <br>

  <div>

    <%= form.label "Descrição", style: "display: block" %>

    <%= form.textarea :description %>

  </div>

  <br>

  <div>

    <%= form.submit "Criar post" %>

  </div>

<% end %>